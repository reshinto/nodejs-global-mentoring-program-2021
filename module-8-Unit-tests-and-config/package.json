{
  "name": "module-8-unit-tests-and-config",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "NODE_ENV=development nodemon --exec ts-node src/index.ts",
    "build": "tsc -b",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:coverage": "jest --coverage --forceExit --watchAll --maxWorkers=1",
    "test:postman": "npx newman run postman/module-8-homework-7.postman_collection.json --delay-request 500"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "src/index.ts",
      "src/config/",
      "src/loaders/",
      "src/models/",
      "node_modules/"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "node_modules/variables/.+\\.(j|t)sx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!variables/.*)"
    ]
  },
